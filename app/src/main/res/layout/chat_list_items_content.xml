<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/customImg"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="7dp"
        app:civ_border_color="@color/textColorPrimary" />


    <TextView
        android:id="@+id/txtSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/customImg"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/customImg"
        android:text="Short Content ..."
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/customImg"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@+id/customImg"
        android:text="Population: ..."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textview_timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtSender"
        android:layout_alignBottom="@+id/txtSender"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="Timing"
        android:textSize="10dp"
        android:textColor="@color/colorPrimaryDark"/>
</RelativeLayout>